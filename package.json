{
  "name": "BE-boilerplate",
  "version": "0.0.1",
  "description": "NodeJS backend boilerplate CDS",
  "main": "src/index.ts",
  "scripts": {
    "lint:js": "node_modules/.bin/eslint .",
    "lint:ts": "node_modules/.bin/tslint -t codeFrame 'src/**/*.ts' 'lib/**/*.ts' 'bin/**/*.ts' 'config/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn run lint:js && yarn run lint:ts",
    "test": "mocha --opts test/mocha.opts",
    "precommit": "lint-staged",
    "prebuild": "rimraf dist",
    "js-start": "node ./dist/src/index.js",
    "ts-start": "yarn run build:live",
    "build": "",
    "build:live": "./node_modules/.bin/nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts --watch src",
    "copy-files": "cp -R files/ dist/files/",
    "copy-package": "cp package.json dist/package.json",
    "db:create": "node_modules/.bin/sequelize db:create",
    "db:drop": "node_modules/.bin/sequelize db:drop",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "zip": "cd dist && zip bundle.zip -r * .[^.]*"
  },
  "lint-staged": {
    "{lib,server,config,validations}/**/*.ts": [
      "prettier --print-width 120 --no-semi --single-quote true --write",
      "git add"
    ]
  },
  "author": "Willi & Diego & Javier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:codigodelsur/BE-boilerplate.git"
  },
  "keywords": [
    "REST",
    "API"
  ],
  "dependencies": {
    "@mcrowe/redis-promise": "^0.0.1",
    "@types/ethereumjs-tx": "^1.0.1",
    "apn": "^2.1.5",
    "bcrypt": "3.0.3",
    "body-parser": "^1.18.2",
    "class-validator": "0.9.1",
    "cookie-parser": "^1.4.3",
    "cors": "2.8.5",
    "ethereumjs-tx": "^1.3.7",
    "etherscan-api": "^10.0.0",
    "express": "4.16.4",
    "express-validation": "^1.0.2",
    "geojson": "^0.5.0",
    "gulp": "4.0.0",
    "gulp-typescript": "5.0.0",
    "helmet": "3.15.0",
    "jsonwebtoken": "8.4.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "nodemon": "1.18.9",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "pusher": "^2.2.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sequelize": "^4.37.10",
    "sequelize-typescript": "^0.5.0",
    "ts-node": "7.0.1",
    "web3": "1.0.0-beta.34",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "@types/apn": "^2.1.2",
    "@types/body-parser": "^1.16.5",
    "@types/chai": "4.1.7",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "6.1.0",
    "@types/express": "4.16.0",
    "@types/geojson": "^1.0.6",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "8.3.0",
    "@types/mocha": "5.2.5",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "0.5.10",
    "@types/mongodb": "^2.2.15",
    "@types/mongoose": "^4.7.27",
    "@types/node": "10.12.18",
    "@types/pg": "^7.1.4",
    "@types/redis": "2.8.10",
    "@types/supertest": "2.0.7",
    "chai": "4.2.0",
    "chai-change": "^2.1.2",
    "dirty-chai": "^2.0.1",
    "dotenv": "6.2.0",
    "eslint": "5.12.0",
    "istanbul": "^0.4.5",
    "mocha": "5.2.0",
    "mocha-typescript": "1.1.17",
    "sequelize-cli": "^4.0.0",
    "supertest": "3.4.1",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "~3.2.2"
  }
}
